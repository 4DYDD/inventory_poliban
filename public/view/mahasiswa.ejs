        <span class="text-left" style="width: 15vw">Email Mahasiswa</span>
        <input type="email" class="form-control" name="email_mahasiswa" placeholder="email mahasiswa" value="<%= selectedData.email_mahasiswa ?? '' %>" required />
      </div>
      <div class="p-2 bg-white d-flex justify-content-evenly align-items-center">
        <span class="text-left" style="width: 15vw">Nomor Mahasiswa</span>
        <input type="number" class="form-control" name="nh_mahasiswa" placeholder="nomor mahasiswa" value="<%= selectedData.nh_mahasiswa ?? '' %>" required />
      </div>


    </div>
    <div class="gap-5 p-3 bg-white tw-w-full d-flex justify-content-center align-items-center" style="border-radius: 0px 0px 4px 4px">
      <button type="submit" class="px-4 btn btn-outline-success">
        edit
      </button>
      <button type="reset" class="px-4 btn btn-outline-info">
        reset
      </button>
    </div>

  </form>
</div>
