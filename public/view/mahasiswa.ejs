<!-- TABEL KITA -->
<table class="text-center tw-text-[1.2vw] portrait:tw-text-[2.7vw] rounded shadow-sm overflow-hidden tw-w-[96vw] tw-border-separate tw-border-spacing-[1px] tw-border tw-bg-blue-200">
  <thead class="tw-h-[50px]">
    <tr class="tw-bg-[rgb(224,237,255)]">
      <th>no</th>
      <th>nim mahasiswa</th>
      <th>nama mahasiswa</th>
      <th>jenkel mahasiswa</th>
      <th>alamat mahasiswa</th>
      <th>email mahasiswa</th>
      <th>nomor mahasiswa</th>
      <th class="tw-w-[17vw]">opsi</th>
    </tr>
  </thead>
  <tbody>
    <% if (dataMahasiswa.length < 1) { %>
    <tr>
      <th colspan="8" class="bg-warning text-white tw-tracking-wide tw-text-[1vw]">
        TIDAK ADA (<%= cari %>) DIDALAM DATABASE!
      </th>
    </tr>
    <% } %>
    <% dataMahasiswa.forEach((mahasiswa, i)=> {i++ %>
    <tr class="hover:tw-bg-blue-50 tw-bg-white">
      <th class="tw-max-w-[10vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-3 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= i %>
          </p>
        </div>
      </th>
      <td class="tw-max-w-[10vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.nim_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="tw-max-w-[10vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.nama_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="tw-max-w-[10vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.jenkel_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="tw-max-w-[15vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.alamat_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="tw-max-w-[15vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.email_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="tw-max-w-[10vw]">
        <div class="tw-h-[7vh] overflow-auto d-flex justify-content-center align-items-center">
          <p class="px-2 m-auto tw-text-ellipsis tw-whitespace-normal">
            <%= mahasiswa.nh_mahasiswa %>
          </p>
        </div>
      </td>
      <td class="p-2">
        <div class="gap-1 d-flex tw-justify-center tw-items-center portrait:tw-flex-wrap">
          <div class="text-white tw-bg-orange-400 text-decoration-none rounded tw-cursor-pointer py-1 tw-w-[100%]" onclick="goTo(`/detailMahasiswa/<%=mahasiswa.nim_mahasiswa%>`, {delay : 100})">
            detail
          </div>
          <div class="text-white tw-bg-blue-500 rounded tw-cursor-pointer tw-flex-grow-1 py-1 tw-w-[100%]" onclick="goTo(`/pilihMahasiswa/<%=mahasiswa.nim_mahasiswa%>`, {delay : 100})">
            edit
          </div>
          <div class="text-white tw-bg-red-400 rounded tw-cursor-pointer tw-flex-grow-1 py-1 tw-w-[100%]" onclick="goTo(`/hapusMahasiswa/<%=mahasiswa.nim_mahasiswa%>`, {delay : 100})">
            hapus
          </div>
        </div>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<!-- TABEL KITA -->

<!-- DETAIL -->
<div class="tw-p-1 tw-min-w-[90vw] tw-max-w-[90vw] tw-bg-[rgb(227,238,255)] d-flex flex-column rounded shadow-sm tw-top-[52%] tw-left-[100%] tw-translate-x-[0%] tw-translate-y-[-50%] tw-fixed flex opacity-1 tw-transition-all tw-duration-300 tw-ease-in-out input--detail">
  <div class="tw-bg-[rgb(156,195,255)] rounded text-center mb-1 py-1 text-white position-relative">
    Detail Peminjaman
  </div>

  <!-- FORM DETAIL -->
  <form action="/editPeminjaman" method="post" class="flex-wrap gap-1 tw-w-full d-flex portrait:tw-flex-col align-items-center form--add">

    <!-- GAMBAR -->
    <div class="d-flex justify-content-evenly align-items-center bg-white p-2 tw-w-[49.8%] tw-h-[60vh] rounded overflow-hidden">
      <% if (selectedData.jenkel_mahasiswa === 'laki-laki') { %>
      <img src="<%= 'https://cdn0.iconfinder.com/data/icons/man-user-human-profile-avatar-person-business/100/10-1User_14-512.png' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar laki-laki" />
      <% }else if(selectedData.jenkel_mahasiswa === 'perempuan'){ %>
      <img src="<%= 'https://www.starkeyoutdoors.com/uploads/1/7/4/4/17442997/96-968657-business-woman-png-business-woman-icon-png_orig.png' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar laki-laki" />
      <% }else{ %>
      <img src="<%= 'https://th.bing.com/th/id/OIP.IjE6Y0XVKhjcWuVrlQW6kwAAAA?rs=1&pid=ImgDetMain' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar tak diketahui" />
      <% } %>
    </div>
    <!-- GAMBAR -->

    <!-- MAHASISWA -->
    <div class="d-flex flex-column tw-w-[49.8%] tw-h-[60vh] bg-white rounded overflow-hidden">

      <div class="d-flex justify-content-evenly align-items-center bg-white px-2 py-0 tw-h-[8vh]">
        <span class="text-left tw-w-[25vw]">Nim Mahasiswa</span>
        <input type="number" class="form-control !tw-bg-blue-50" name="nim_mahasiswa" placeholder="nim mahasiswa" value="<%= selectedData.nim_mahasiswa ?? '' %>" readonly required disabled />
      </div>
      <div class="d-flex justify-content-evenly align-items-center bg-white px-2 py-0 tw-h-[8vh]">
        <span class="text-left tw-w-[25vw]">Nama Mahasiswa</span>
        <input type=" text" class="form-control !tw-bg-blue-50" name="nama_mahasiswa" placeholder="nama mahasiswa" value="<%= selectedData.nama_mahasiswa ?? '' %>" readonly required disabled />
      </div>
      <div class="d-flex justify-content-evenly align-items-center bg-white px-2 py-0 tw-h-[8vh]">
        <span class="text-left tw-w-[25vw]">Jenkel Mahasiswa</span>
        <input type=" text" class="form-control !tw-bg-blue-50" name="jenkel_mahasiswa" placeholder="jenkel mahasiswa" value="<%= selectedData.jenkel_mahasiswa ?? '' %>" readonly required disabled />
      </div>
      <div class="px-2 py-2 bg-white d-flex justify-content-evenly align-items-baseline">
        <span class="text-left tw-w-[25vw]">Alamat Mahasiswa</span>
        <textarea class="form-control !tw-bg-blue-50" name="alamat_mahasiswa" placeholder="alamat mahasiswa" rows="3" disabled required><%= selectedData.alamat_mahasiswa ?? '' %></textarea>
      </div>
      <div class="d-flex justify-content-evenly align-items-center bg-white px-2 py-0 tw-h-[8vh]">
        <span class="text-left tw-w-[25vw]">Email Mahasiswa</span>
        <input type="email" class="form-control !tw-bg-blue-50" name="email_mahasiswa" placeholder="email mahasiswa" value="<%= selectedData.email_mahasiswa ?? '' %>" readonly required disabled />
      </div>

    </div>
    <!-- MAHASISWA -->

  </form>
  <!-- FORM DETAIL -->
</div>
<!-- DETAIL -->

<!-- INPUT ADD -->
<div class="tw-p-1 w-50 tw-bg-[rgb(227,238,255)] d-flex flex-column rounded shadow-sm tw-top-[50%] tw-left-[100%] tw-translate-x-[0%] tw-translate-y-[-50%] tw-fixed flex opacity-1 tw-transition-all tw-duration-300 tw-ease-in-out input--add">
  <div class="tw-bg-[rgb(177,208,255)] rounded text-center mb-1 py-1 text-white position-relative">
    Tambah Mahasiswa
  </div>

  <form action="/tambahMahasiswa" method="post" class="d-flex flex-column w-100 form--add">
    <div class="p-2 bg-white d-flex justify-content-evenly align-items-center" style="border-radius: 4px 4px 0px 0px">
      <span class="text-left" style="width: 15vw">Nama Mahasiswa</span>
      <input type="text" class="form-control" name="nama_mahasiswa" id="namaMahasiswa" placeholder="nama mahasiswa" required />
    </div>
    <div class="p-2 bg-white d-flex justify-content-evenly align-items-center" style="border-radius: 4px 4px 0px 0px">
      <span class="text-left" style="width: 15vw">Nama Mahasiswa</span>
      <select name="jenkel_mahasiswa" class="form-select">
        <option value="kosong" selected>Pilih Jenkel</option>
        <option value="laki-laki">Laki-Laki</option>
        <option value="perempuan">Perempuan</option>
      </select>
    </div>
    <div class="p-2 bg-white d-flex justify-content-evenly align-items-baseline">
      <span class="text-left" style="width: 15vw">Alamat Mahasiswa</span>
      <textarea class="form-control" name="alamat_mahasiswa" placeholder="alamat mahasiswa" rows="1" required></textarea>
    </div>
    <div class="p-2 bg-white d-flex justify-content-evenly align-items-center">
      <span class="text-left" style="width: 15vw">Email Mahasiswa</span>
      <input type="email" class="form-control" name="email_mahasiswa" id="emailMahasiswa" placeholder="email mahasiswa" required />
    </div>
    <div class="p-2 bg-white d-flex justify-content-evenly align-items-center">
      <span class="text-left" style="width: 15vw">Nomor Mahasiswa</span>
      <input type="number" class="form-control" name="nh_mahasiswa" id="nhMahasiswa" placeholder="nomor mahasiswa" required />
    </div>
    <div class="gap-5 p-3 bg-white d-flex justify-content-center align-items-center" style="border-radius: 0px 0px 4px 4px">
      <button type="submit" class="px-4 btn btn-outline-success">kirim</button>
      <button type="reset" class="px-4 btn btn-outline-info">reset</button>
    </div>
  </form>
</div>
<!-- INPUT ADD -->

<!-- INPUT EDIT -->
<div class="tw-p-1 tw-min-w-[90vw] tw-max-w-[90vw] tw-bg-[rgb(227,238,255)] d-flex flex-column rounded shadow-sm tw-top-[50%] tw-left-[100%] tw-translate-x-[0%] tw-translate-y-[-50%] tw-fixed flex opacity-1 tw-transition-all tw-duration-300 tw-ease-in-out input--edit">
  <div class="tw-bg-[rgb(177,208,255)] rounded text-center mb-1 py-1 text-white position-relative">
    Edit Mahasiswa
  </div>

  <!-- FORM EDIT -->
  <form action="/editMahasiswa" method="post" class="flex-wrap gap-1 tw-w-full d-flex portrait:tw-flex-col align-items-center form--add">

    <!-- GAMBAR -->
    <div class="d-flex justify-content-evenly align-items-center bg-white p-2 tw-w-[49.8%] tw-h-[60vh] rounded overflow-hidden">
      <% if (selectedData.jenkel_mahasiswa === 'laki-laki') { %>
      <img src="<%= 'https://cdn0.iconfinder.com/data/icons/man-user-human-profile-avatar-person-business/100/10-1User_14-512.png' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar laki-laki" />
      <% }else if(selectedData.jenkel_mahasiswa === 'perempuan'){ %>
      <img src="<%= 'https://www.starkeyoutdoors.com/uploads/1/7/4/4/17442997/96-968657-business-woman-png-business-woman-icon-png_orig.png' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar perempuan" />
      <% }else{ %>
      <img src="<%= 'https://th.bing.com/th/id/OIP.IjE6Y0XVKhjcWuVrlQW6kwAAAA?rs=1&pid=ImgDetMain' %>" class="tw-w-[60%] portrait:tw-w-[50%]" alt="gambar tak diketahui" />
      <% } %>
    </div>
    <!-- GAMBAR -->

    <div class="d-flex flex-column tw-w-[49.8%] tw-h-[60vh] bg-white rounded overflow-hidden">

      <div class="p-2 bg-white d-flex justify-content-evenly align-items-center" style="border-radius: 4px 4px 0px 0px">
        <span class="text-left" style="width: 15vw">Nim Mahasiswa</span>
        <input type="text" class="form-control !tw-bg-blue-50" name="nim_mahasiswa" placeholder="nim mahasiswa" value="<%= selectedData.nim_mahasiswa ?? 'eaerawer' %>" readonly required />
      </div>
      <div class="p-2 bg-white d-flex justify-content-evenly align-items-center" style="border-radius: 4px 4px 0px 0px">
        <span class="text-left" style="width: 15vw">Nama Mahasiswa</span>
        <input type="text" class="form-control" name="nama_mahasiswa" placeholder="nama mahasiswa" value="<%= selectedData.nama_mahasiswa ?? '' %>" required />
      </div>
      <div class="p-2 bg-white d-flex justify-content-evenly align-items-center" style="border-radius: 4px 4px 0px 0px">
        <span class="text-left" style="width: 15vw">Jenkel Mahasiswa</span>
        <select name="jenkel_mahasiswa" class="form-select">
          <option value="kosong" <%- selectedData.jenkel_mahasiswa === 'kosong' ? 'selected' : ''%>>Pilih Jenkel</option>
          <option value="laki-laki" <%- selectedData.jenkel_mahasiswa === 'laki-laki' ? 'selected' : ''%>>Laki-Laki</option>
          <option value="perempuan" <%- selectedData.jenkel_mahasiswa === 'perempuan' ? 'selected' : ''%>>Perempuan</option>
        </select>
