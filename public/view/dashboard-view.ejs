    <div
        class="tw-p-1 tw-w-[60vw] tw-bg-[rgb(227,238,255)] d-flex flex-column rounded shadow-sm tw-top-[50%] tw-left-[100%] tw-translate-x-[0%] tw-translate-y-[-50%] tw-fixed flex opacity-1 tw-transition-all tw-duration-300 tw-ease-in-out input--add">
        <div class="tw-bg-[rgb(177,208,255)] rounded text-center mb-1 py-1 text-white position-relative">
            Kembalikan Barang
        </div>

        <form action="/kembalikanBarang" method="post" class="d-flex flex-column w-100 form--add">
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2"
                style="border-radius: 4px 4px 0px 0px">
                <span class="text-left" style="width: 15vw">Id Barang</span>
                <input type=" text" class="form-control !tw-bg-blue-50" name="id_barang" placeholder="id barang"
                    value="<%= dataPeminjaman.id_barang ?? 'eaerawer' %>" readonly required />
            </div>
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2"
                style="border-radius: 4px 4px 0px 0px">
                <span class="text-left" style="width: 15vw">Nama Barang</span>
                <input type=" text" class="form-control !tw-bg-blue-50" name="nama_barang" placeholder="nama barang"
                    value="<%= dataPeminjaman.nama_barang ?? '' %>" readonly required />
            </div>
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
                <span class="text-left" style="width: 15vw">Kategori Barang</span>
                <input type=" text" class="form-control !tw-bg-blue-50" name="kategori_barang"
                    placeholder="jenis barang" value="<%= dataPeminjaman.kategori_barang ?? '' %>" readonly required />
            </div>
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
                <span class="text-left" style="width: 15vw">Gambar Barang</span>
                <input type=" text" class="form-control !tw-bg-blue-50" name="gambar_barang" id="gambarBarang"
                    placeholder="gambar barang" value="<%= dataPeminjaman.gambar_barang ?? '' %>" readonly required />
            </div>
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
                <span class="text-left" style="width: 15vw">Barang yang harus dikembalikan</span>
                <input type="number" class="form-control !tw-bg-blue-50" name="barang_dipinjam" id="barangDipinjam"
                    placeholder="barang dipinjam" value="<%= dataPeminjaman.barangDipinjam %>" readonly required />
            </div>
            <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
                <span class="text-left" style="width: 15vw">Nim Mahasiswa</span>
                <input type="number" class="form-control !tw-bg-blue-50" name="nim_mahasiswa" id="nimMahasiswa"
                    placeholder="nim mahasiswa" value="<%= dataPeminjaman.nimMahasiswa %>" readonly required />
            </div>
            <div class="d-flex justify-content-center align-items-center gap-5 bg-white p-3"
                style="border-radius: 0px 0px 4px 4px">
                <button type="submit" class="btn btn-outline-success px-4">kembalikan</button>
                <button type="reset" class="btn btn-outline-info px-4">reset</button>
            </div>
        </form>
