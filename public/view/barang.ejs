            <input type=" text" class="form-control" name="nama_barang" placeholder="nama barang"
                value="<%= selectedData.nama_barang ?? '' %>" required />
        </div>
        <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
            <span class="text-left" style="width: 15vw">Kategori Barang</span>
            <input type=" text" class="form-control" name="kategori_barang" placeholder="jenis barang"
                value="<%= selectedData.kategori_barang ?? '' %>" required />
        </div>
        <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
            <span class="text-left" style="width: 15vw">Jumlah Barang</span>
            <input type="number" class="form-control" name="jumlah_barang" placeholder="jumlah barang"
                value="<%= selectedData.jumlah_barang ?? '' %>" required />
        </div>
        <div class="d-flex justify-content-evenly align-items-center bg-white p-2">
            <span class="text-left" style="width: 15vw">Gambar Barang</span>
            <input type=" text" class="form-control" name="gambar_barang" id="gambarBarang" placeholder="gambar barang"
                value="<%= selectedData.gambar_barang ?? '' %>" required />
        </div>
        <div class="d-flex justify-content-center align-items-center gap-5 bg-white p-3"
            style="border-radius: 0px 0px 4px 4px">
            <button type="submit" class="btn btn-outline-success px-4">
                edit
            </button>
            <button type="reset" class="btn btn-outline-info px-4">
                reset
            </button>
        </div>
    </form>
</div>
